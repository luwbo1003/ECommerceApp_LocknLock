<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragment.CartFragment">

    <!--top navbar và recycler view sản phẩm-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <!--top nav-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/tv_tittle_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:fontFamily="@font/poppins_medium"
                android:text="Checkout"
                android:textColor="@color/black"
                android:textSize="25dp" />
        </LinearLayout>
        <!--kết thúc top nav-->

        <!--recyler product-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ryc_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp" />
        <!-- kết thúc recyler product-->

    </LinearLayout>
    <!--kết thúc phần top navbar và recycler view sản phẩm-->


    <!--phần chi tiết giá và nút checkout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="20dp"
        android:orientation="vertical">

        <!--phần chi tiết giá-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="10dp"
            android:orientation="vertical"
            android:paddingVertical="7dp">

            <!-- subtotal-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/iv_subtotal_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Subtotal"
                    android:textColor="#3C3B3B"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/iv_subtotal_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="end"
                    android:text="$ 15.00"
                    android:textColor="@color/black"
                    android:textSize="19dp" />
            </LinearLayout>
            <!-- kết thúc subtotal-->

            <!--delivery-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/iv_delivery_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Delivery"
                    android:textColor="#3C3B3B"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/iv_delivery_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="end"
                    android:text="$ 15.00"
                    android:textColor="@color/black"
                    android:textSize="19dp" />
            </LinearLayout>
            <!--kết thúc delivery-->

            <!--total-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/iv_total_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Total"
                    android:textColor="#3C3B3B"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/iv_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="end"
                    android:text="$ 15.00"
                    android:textColor="@color/black"
                    android:textSize="25dp" />
            </LinearLayout>
            <!-- kết thúc total-->

        </LinearLayout>
        <!--kết thúc phần chi tiết giá-->

        <!--nút checkout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="18dp"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/btn_checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cate_bg"
                android:letterSpacing="0"
                android:text="Checkout"
                android:textAllCaps="false"
                android:textSize="20dp" />
        </LinearLayout>
        <!--kết thúc nút checkout -->

    </LinearLayout>
    <!--kết thúc phần chi tiết giá và nút checkout-->

</FrameLayout>