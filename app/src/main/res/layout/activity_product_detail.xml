<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".activities.ProductDetailActivity">

    <!-- Thanh điều hướng-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingEnd="200dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView7"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView7"
            app:srcCompat="@drawable/ic_arrow_left" />

        <ImageView
            android:id="@+id/iv_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="76dp"
            android:paddingEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_dots" />

    </LinearLayout>
    <!--kết thúc thanh điều hướng-->

    <!-- Phần body-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Ảnh sản phẩm-->
        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_gravity="top"
            android:src="@drawable/product_image" />

        <!--Phần chi tiết-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/detail_page_bg"
            android:orientation="vertical">

            <!--loại màu-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_cate_color_blue"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/cate_bg"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Blue"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_cate_color_pink"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/cate_bg"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Pink"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <!-- kết thúc loại màu-->
            </LinearLayout>

            <!--Tên và giá sản phẩm-->
            <!--kết thức tên và giá-->

            <!--Description-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_bold"
                    android:padding="15dp"
                    android:text="Jumbo Tumbler \n 900 ml"
                    android:textColor="@color/black"
                    android:textSize="27dp" />

                <TextView
                    android:id="@+id/iv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/rubik_bold"
                    android:text="$ 15.00"
                    android:textColor="#459C48"
                    android:textSize="27dp" />


                <!--kết thúc tên và giá sản phẩm-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:fontFamily="@font/rubik"
                    android:lineSpacingExtra="3sp"
                    android:text="Bình giữ nhiệt bảo hành 6 tháng về vấn đề tỏa nhiệt,
với điều kiện sản phẩm còn nguyên vẹn, không bị trầy xước, móp méo,
thiếu linh kiện, không xảy ra va đập, rơi rớt."
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>
            <!--Kết thúc description-->

            <!--cart-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:gravity="bottom">

                <ImageView
                    android:id="@+id/iv_btn_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    app:srcCompat="@drawable/ic_minus_square" />

                <TextView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="1"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/iv_btn_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    app:srcCompat="@drawable/ic_add_square" />

                <TextView
                    android:id="@+id/tv_add_to_cart"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/detail_cart_btn"
                    android:textColor="@color/white"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Add to Cart"
                    android:textSize="20dp" />

            </LinearLayout>

            <!--kết thúc phần chi tiết-->
        </LinearLayout>

        <!--Kết thúc phần body-->
    </LinearLayout>

    <!--Kết thúc tổng-->
</LinearLayout>