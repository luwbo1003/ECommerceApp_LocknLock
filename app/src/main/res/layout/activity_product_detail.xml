<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".activities.ProductDetailActivity">

    <!-- Thanh điều hướng-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/iv_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingEnd="200dp"
            app:srcCompat="@drawable/ic_arrow_left" />

    </LinearLayout>
    <!--kết thúc thanh điều hướng-->

    <!-- Phần body-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Ảnh sản phẩm-->
        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_gravity="top"
            android:src="@drawable/product_image" />

        <!--Phần chi tiết-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/detail_page_bg"
            android:orientation="vertical">

            <!--Tên và giá sản phẩm-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/rubik_bold"
                    android:paddingVertical="15dp"
                    android:text="Jumbo Tumbler 900 ml"
                    android:textColor="@color/black"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/rubik_bold"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="555000"
                    android:textColor="#FF735C"
                    android:textSize="23dp" />


                <!--kết thúc tên và giá sản phẩm-->
            </LinearLayout>
            <!--Description-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/tv_des"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/rubik"
                    android:lineSpacingExtra="3sp"
                    android:padding="15dp"
                    android:text="Bình giữ nhiệt"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>
            <!--Kết thúc description-->

            <!--cart-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_minus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_minus_square" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="1"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_add_square" />

                <Button
                    android:id="@+id/btn_add_to_cart"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/detail_cart_btn"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center_vertical|center_horizontal"
                    android:letterSpacing="0"
                    android:text="Add to Cart"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

            </LinearLayout>

            <!--kết thúc phần chi tiết-->
        </LinearLayout>

        <!--Kết thúc phần body-->
    </LinearLayout>

    <!--Kết thúc tổng-->
</LinearLayout>